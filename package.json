{
  "name": "@edx/studio-frontend",
  "version": "0.0.0",
  "description": "The frontend for the Open edX platform",
  "scripts": {
    "lint": "eslint --ext .js --ext .jsx .",
    "start": "NODE_ENV=development BABEL_ENV=development webpack-dev-server --config=config/webpack.dev.config.js --hot --inline --progress",
    "build": "NODE_ENV=production BABEL_ENV=production webpack --config=config/webpack.prod.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "AGPL-3.0",
  "dependencies": {
    "bootstrap": "^4.0.0-beta",
    "edx-bootstrap": "^0.1.7",
    "paragon": "git+ssh://git@github.com/edx/paragon.git",
    "popper.js": "^1.12.5",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.5",
    "eslint-config-edx": "4.0.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "node-sass": "^4.5.3",
    "react-error-overlay": "^1.0.10",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie 11"
            ]
          }
        }
      ],
      "babel-preset-react"
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-edx",
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "config/*.js"
          ]
        }
      ]
    }
  }
}
